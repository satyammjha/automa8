{
    "name": "CUCHD",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Auto-login and session management for CUCHD portal",
    "permissions": [
      "storage",
      "cookies",
      "activeTab",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
        "https://students.cuchd.in/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://students.cuchd.in/",
                "https://students.cuchd.in/Login.aspx*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "images/captcha.png"
            ],
            "matches": [
                "https://students.cuchd.in/*"
            ]
        }
    ]
}